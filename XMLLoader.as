/*	Filename:	XMLLoader.as		Purpose:	General Purpose static XML-Loading class -- exposes several public methods:					public function XMLLoader(location:string):XML - constructor				public function getXML():XML - returns XML representation of location string		Author:		Justin Bachorik		Date:		3/21/09	*/package {		import flash.net.*;	import flash.events.*;	import flash.xml.*;		public class XMLLoader {				// constants				// instance variables		private var isLoaded:Boolean = false;				// for dealing with XML		private var myXml:XML;		private var xmlLoader:URLLoader;				// main class function, returns an XML representation of the passed-in file location		public function XMLLoader(location:String):void {						// initialize the boolean		 	isLoaded = false;			// specify location of external xml file			var urlRequest = new URLRequest(location);			// instantiate the loader			xmlLoader = new URLLoader();			// add event listener so we know when the xml is loaded			xmlLoader.addEventListener(Event.COMPLETE, xmlCompleteListener);			// and load the XML			xmlLoader.load(urlRequest);						myXml = new XML;			myXml = null;		} // end loadXML				// function used to retrieve the XML		public function getXML():XML {						return myXml;					}	// end getXML				// helper function - load handler for the xml		private function xmlCompleteListener(e:Event):void {			// parse the loaded data			myXml = new XML(xmlLoader.data);			trace('load complete!');			isLoaded = true;			trace(isLoaded);					}					} // end class XMLLoader	} // end package