/*	Filename:	MoveCounter.as		Purpose:	Displays and tracks number of moves for Move It!		Author:		Justin Bachorik		Date:		3/20/09*/package {		import flash.display.*;	import flash.text.*;	import caurina.transitions.Tweener;		public class MoveCounter extends Sprite {				// constants		private static const FLASH_TIME = 1;				// instance variables		var myNumMoves:Number;		var myTextField:TextField;		var myTextFormat:TextFormat;		var myFlashBox:Shape;						// constructor		public function MoveCounter(startingMoveCount:Number):void {						// take down the argument			myNumMoves = startingMoveCount;						// set things up			setUpTextField();			setUpFlashBox();								} // end constructor				// function to set up the text field 		private function setUpTextField():void {						// set up field			myTextField = new TextField();			myTextField.width = 50;			myTextField.autoSize = TextFieldAutoSize.CENTER;			myTextField.text = String(myNumMoves);			myTextField.tabEnabled = false;						// set up formatting			myTextFormat = new TextFormat();			myTextFormat.size = 100;			myTextFormat.font = "Tahoma";			myTextFormat.color = '0x222222';			myTextField.setTextFormat(myTextFormat);			this.addChild(myTextField);					} 	// end setUpTextField				// function to set up the flashBox		private function setUpFlashBox():void {			myFlashBox = new Shape();			myFlashBox.graphics.lineStyle(1,0,0);			myFlashBox.graphics.beginFill(0xFFF889,1);			myFlashBox.graphics.drawRect(0,0,myTextField.width, myTextField.height);			myFlashBox.alpha = 0;			this.addChild(myFlashBox);		}				// function to decrement the move counter		public function decrement():void {				myNumMoves--;			updateText();		}	// end decrement				// accessor function for number of moves		public function getNumMoves():Number {			return myNumMoves;		}				// mutator function to add moves		public function addNumMoves(increment:Number):void {			myNumMoves += increment;			updateText();			flash();		}				// mutator function to set moves		public function setNumMoves(numMoves:Number):void {			myNumMoves = numMoves;			updateText();			flash();		}								// utility function to update the text field		private function updateText():void {						myTextField.text = String(myNumMoves);			myTextField.setTextFormat(myTextFormat);					}	// end updateText				// function to flash the flashbox 		private function flash():void {			myFlashBox.alpha = 1;			Tweener.addTween(myFlashBox, {alpha: 0, time: FLASH_TIME} );		}					} // end class MoveCounter	} // end package