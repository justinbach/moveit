/*	Filename:	BoardSquare.as		Purpose:	Bitmap-loading class to load empty squares		Author:		Justin Bachorik		Date:		3/20/09	*/package {		import flash.display.*;	import flash.text.*;	import flash.net.*;	import flash.events.*;	import caurina.transitions.Tweener;		public class BoardSquare extends Sprite {				// constants		private static const IMAGE_LOCATION = 'img/empty.png';				// instance variables				// the bitmap loader		private var imageLoader:Loader;				// constructor		public function BoardSquare():void {						// instantiate the loader			imageLoader = new Loader();						// set up the event listener for load completion			imageLoader.contentLoaderInfo.addEventListener(Event.INIT, initListener);						// load the bitmap			imageLoader.load(new URLRequest(IMAGE_LOCATION));					} // end constructor				// handler to display the loaded image		private function initListener(e:Event):void {			this.addChild(imageLoader.content);					}					}	// end class	}	// end package